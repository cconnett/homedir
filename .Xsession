 #!/bin/sh

# Handles themes.  You may have to use gconf to disable it setting the
# background.

gnome-settings-daemon &

xscreensaver -nosplash &
xautolock -time 5 -locker "/usr/bin/xlock -mode goop" &
#gnome-power-manager &   # for laptops and stuff
gnome-volume-manager &  # for auto-mounting CDs, USB sticks, and such

# awesome receives xinit's process id; when it terminates, X will be
# terminated
exec xmonad
