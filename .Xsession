 #!/bin/sh

# Not supported on GTK+ 3.
# export GDK_NATIVE_WINDOWS=1 # http://debbugs.gnu.org/cgi-bin/bugreport.cgi?bug=4870

if [ $(hostname -d) == "nyc.corp.google.com" ]; then
  export auto_proxy=http://proxyconfig.corp.google.com/wpad.dat
fi

export LPDEST="cathedral-parkway"
export PRINTER="cathedral-parkway"

gnome-settings-daemon &

xscreensaver -nosplash &
gnome-power-manager &   # for laptops and stuff
gnome-volume-manager &  # for auto-mounting CDs, USB sticks, and such

exec xmonad
